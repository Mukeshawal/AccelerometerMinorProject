<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/x_data"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="x"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/y_data"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/x_data"
        android:text="y"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/z_data"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/y_data"
        android:text="z"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/commandBot"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="148dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:text="commandBot"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/BtSwitch"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="on/off"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/DiscoverBt"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/BtSwitch"
        android:text="Discover"
        android:layout_toRightOf="@+id/BtSwitch" />

    <Button
        android:id="@+id/makeDiscoverable"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/DiscoverBt"
        android:text="make discoverable"
        android:layout_toRightOf="@+id/DiscoverBt" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/BtSwitch"
        android:layout_alignParentLeft="true"
        android:id="@+id/LvNewDevices"/>
</RelativeLayout>