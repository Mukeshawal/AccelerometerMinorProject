<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/x_data"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="x"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/y_data"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/x_data"
        android:text="y"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/z_data"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/y_data"
        android:text="z"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/commandBot"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/z_data"
        android:text="commandBot"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/BtSwitch"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/commandBot"
        android:text="on/off"
        android:textSize="10dp"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/DiscoverBt"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@+id/commandBot"
        android:layout_toEndOf="@+id/BtSwitch"
        android:text="Discover"
        android:textSize="10dp"
        android:layout_toRightOf="@+id/BtSwitch" />

    <Button
        android:id="@+id/makeDiscoverable"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/commandBot"
        android:layout_toEndOf="@+id/DiscoverBt"
        android:text="make discoverable"
        android:textSize="10dp"
        android:layout_toRightOf="@+id/DiscoverBt" />

    <TextView
        android:id="@+id/PairedDevice"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/makeDiscoverable"
        android:text="PairedDevice"
        android:textSize="20dp"
        android:layout_alignParentLeft="true" />

    <ListView
        android:id="@+id/LvPairedDevices"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/PairedDevice" />

    <TextView
        android:id="@+id/NewDevice"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/LvPairedDevices"
        android:text="Discovered Devices"
        android:textSize="20dp"
        android:layout_alignParentLeft="true" />
    <ListView
        android:id="@+id/LvNewDevices"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/NewDevice" />



</RelativeLayout>